{
  "name": "scalajs.pool",
  "version": "0.0.1",
  "description": "scalajs pool app",
  "module": "index.html",
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "minhtml": "copyfiles *.html dist && html-minifier --input-dir dist --output-dir dist --collapse-whitespace",
    "mincss": "postcss *.css -u cssnano --no-map -d dist",
    "minjs": "npx babel *.js --presets es2017 --minified --out-dir dist",
    "minimg": "imagemin *.png -o dist",
    "copy": "copyfiles favicon.ico manifest.webmanifest dist",
    "build": "npm run minhtml && npm run mincss && npm run minjs && npm run minimg && npm run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/objektwerks/scalajs.pool.git"
  },
  "author": "Objektwerks",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/objektwerks/scalajs.pool/issues"
  },
  "homepage": "https://github.com/objektwerks/scalajs.pool#readme",
  "keywords": [],
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2017": "^6.24.1",
    "copyfiles": "^2.0.0",
    "cssnano": "^4.0.5",
    "html-minifier": "^3.5.20",
    "imagemin-cli": "^6.0.0",
    "postcss-cli": "^8.3.1"
  }
}
